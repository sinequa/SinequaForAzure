{
    "type": "Microsoft.VirtualMachineImages/imageTemplates",
    "apiVersion": "2021-10-01",
    "location": "westeurope",
    "dependsOn": [],
    "tags": {},
    "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
            "<imgBuilderId>": {}
        }
    },
    "properties": {
        "buildTimeoutInMinutes": 180,
        "vmProfile": {
            "vmSize": "Standard_D4s_v3"
        },
        "source": {
            "type": "PlatformImage",
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "<imageSku>",
            "version": "latest"
        },
        "customize": [
            {
                "type": "WindowsUpdate",
                "searchCriteria": "IsInstalled=0",
                "filters": [
                    "exclude:$_.Title -like '*Preview*'",
                    "include:$true"
                ]
            }
        ],
        "distribute": [
            {
                "type": "ManagedImage",
                "imageId": "<imageID>",
                "location": "<location>",
                "runOutputName": "DistributeImage"
            }
        ]
    }
}